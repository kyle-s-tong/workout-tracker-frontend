
<div class="h-screen flex flex-col items-center justify-center">
  <form
    {{action "delete" on="submit"}}
    class="flex flex-col items-center w-full shadow border rounded border-gray-light bg-white"
  >
    <div
      class="flex flex-col items-center p-2 pb-8 pt-8 w-5/6 h-full"
    >
      <p class="flex-1 m-2 text-primary font-semibold">
        Click delete to confirm deletion of this exercise:
      </p>

      <div>
        <button
          type="submit"
          class="flex-1 border-2 rounded p-1 pl-3 pr-3 m-2 border-primary text-primary hover:bg-primary hover:text-white font-semibold"
        >
          Delete
        </button>

        {{#link-to
          "routines.routine.workout"
          this.model.workout
          class="flex-1 border-2 rounded p-1 pl-3 pr-3 m-2 border-primary text-primary hover:bg-primary hover:text-white font-semibold no-link"
        }}
          Cancel
        {{/link-to}}
      </div>



    </div>
  </form>
</div>